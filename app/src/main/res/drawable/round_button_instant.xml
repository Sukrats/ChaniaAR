<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:exitFadeDuration="@android:integer/config_shortAnimTime">

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <stroke android:color="@color/text_icon" android:width="2dp" />
                    <solid android:color="@color/colorPrimaryDarkTint"/>
                </shape>
            </item>
            <item
                android:left="16dp"
                android:top="16dp"
                android:bottom="16dp"
                android:right="16dp">
                <bitmap android:src="@drawable/ic_visibility_white_24dp"/>
            </item>
        </layer-list>
    </item>

    <item android:state_enabled="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <stroke android:color="@color/text_icon" android:width="4dp" />
                    <solid android:color="@color/colorPrimaryDark"/>
                    <size android:width="36dp" android:height="36dp"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_visibility_white_24dp"
                android:left="14dp"
                android:top="14dp"
                android:bottom="14dp"
                android:right="14dp"/>
        </layer-list>
    </item>
</selector>