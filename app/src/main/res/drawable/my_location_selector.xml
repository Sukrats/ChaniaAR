<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item >
                <shape>
                    <corners android:radius="2dp" />
                    <stroke android:width="1dp" android:color="#1AC7C7C7" />
                </shape>
            </item>
            <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" >
                <shape>
                    <corners android:radius="2dp" />
                    <stroke android:width="1dp" android:color="#1A000000" />
                </shape>
            </item>
            <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
                <shape>
                    <corners android:radius="1dp" />
                    <solid android:color="#BFFAFAFA" />
                    <padding android:bottom="5dp" android:left="5dp"
                        android:right="5dp" android:top="5dp" />
                </shape>
            </item>
            <item >
                <bitmap
                    android:src="@drawable/ic_my_location_black_36dp"
                    android:tint="#BFFAFAFA"
                    android:gravity="center" />
            </item>
        </layer-list>
    </item>

</selector>